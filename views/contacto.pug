extends layout

block content
  h2.center.indigo-text.darken-4 #{title}
  .row
    form.col.s12.l6.offset-l3(method='POST', action='/contacto')
      .row
        .input-field.col.s6
          i.material-icons.prefix account_circle
          input#email.validate(type='email',name='email')
          label(for='email', data-error='Email invalido', data-success='valido') Email
        .input-field.col.s6
          i.material-icons.prefix phone
          input#icon_telephone.validate(type='tel',name='tel')
          label(for='icon_telephone') Tel√©fono
        .input-field.col.s12
          i.material-icons.prefix chat_bubble_outline
          textarea#textarea1.materialize-textarea(name='texto')
          label(for='textarea1') Mensaje
        button.waves-effect.waves-light.btn(type='submit') Enviar
